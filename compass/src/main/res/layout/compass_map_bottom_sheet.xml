<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

    <Button
        android:id="@+id/configure_sensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_normal"
        android:text="@string/compass_configure_sensors"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/bottom_sheet_card_height"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/mtrl_card_spacing">

            <TextView
                android:id="@+id/fps_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:textColor="#ff000000"
            />

            <TextView
                android:id="@+id/location_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:textColor="#ff000000"
            />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/azimuth_text"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:layout_gravity="center"
                    android:textColor="#ff000000"
                />

                <TextView
                    android:id="@+id/turn_text"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:text="turn"
                    android:layout_gravity="center"
                    android:textColor="#ff000000"
                />

                <TextView
                    android:id="@+id/direction_text"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:text="direction"
                    android:layout_gravity="center"
                    android:textColor="#ff000000"
                />

            </LinearLayout>

            <TextView
                android:id="@+id/pressure_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:textSize="@dimen/text_size_normal"
                android:textColor="#ff000000"
            />

            <TextView
                android:id="@+id/walking_state_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:textSize="@dimen/text_size_normal"
                android:textColor="#ff000000"
            />

            <TextView
                android:id="@+id/wifi_location_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:textSize="@dimen/text_size_normal"
                android:textColor="#ff000000"
            />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</merge>
